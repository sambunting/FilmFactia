<h3>Popular Movies</h3>
<div id="popularMovies">
	<div class="slidee">
		{{#each popular}}
				<li class="poster">
					<a href="movie/{{this.id}}/">
						<img src="http://image.tmdb.org/t/p/w185/{{this.poster_path}}">
					</a>
				</li>
		{{else}}
			<p>List is empty</p>
		{{/each}}
	</div>
</div>

<div class="scrollbar" id="popularMoviesScrollbar">
    <div class="handle"></div>
</div>

